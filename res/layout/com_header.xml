<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mLlHeader"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/mIvLeft"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/header_btn_width"
            android:layout_height="@dimen/header_btn_height"
            android:padding="12dp"
            android:src="@drawable/ic_well_done"
            android:background="@drawable/btn_common"/>
    <TextView
            android:id="@+id/mTvLeft"
            android:visibility="gone"
            android:minWidth="@dimen/header_btn_width"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_btn_height"
            android:layout_toEndOf="@+id/mIvLeft"
            android:text="@string/app_name"
            android:drawableStart="@drawable/ic_well_done"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="@drawable/btn_common"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_btn_height"
            android:layout_marginLeft="@dimen/header_btn_width"
            android:layout_marginRight="@dimen/header_btn_width"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/mTvTitle"/>
    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_btn_height"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/header_btn_width"
            android:layout_marginRight="@dimen/header_btn_width"
            android:orientation="horizontal">
        <RadioButton
                android:minWidth="@dimen/header_btn_width"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/near"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/header_rb_text"
                android:background="@drawable/rb_left"
                android:id="@+id/rbNear"/>
        <RadioButton
                android:minWidth="@dimen/header_btn_width"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/follow"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/header_rb_text"
                android:background="@drawable/rb_right"
                android:id="@+id/rbFollow"/>
    </RadioGroup>
    <TextView
            android:id="@+id/mTvRight"
            android:visibility="gone"
            android:minWidth="@dimen/header_btn_width"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_btn_height"
            android:text="@string/app_name"
            android:paddingEnd="25dp"
            android:paddingStart="0dp"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:background="@drawable/btn_common"
            android:gravity="center"/>
    <ImageView
            android:id="@+id/mIvRed"
            android:visibility="gone"
            android:layout_toEndOf="@+id/mTvRight"
            android:layout_marginTop="12dp"
            android:layout_marginStart="-25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_conner"/>
    <ImageView
            android:id="@+id/mIvRight"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/header_btn_width"
            android:layout_height="@dimen/header_btn_height"
            android:padding="12dp"
            android:src="@drawable/ic_well_done"
            android:background="@drawable/btn_common"/>

</RelativeLayout>
